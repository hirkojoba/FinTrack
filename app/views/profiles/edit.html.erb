<div style="max-width: 600px; margin: 0 auto;">
  <h1>Your Financial Profile</h1>
  <p style="color: #666; margin-bottom: 2rem;">
    Set up your financial information to help FinTrack provide personalized insights and forecasts.
  </p>

  <%= form_with(model: @user, url: profile_path, method: :patch, local: true) do |form| %>
    <% if @user.errors.any? %>
      <div style="background: #f8d7da; color: #721c24; padding: 1rem; border: 1px solid #f5c6cb; border-radius: 4px; margin-bottom: 1rem;">
        <h2 style="margin-top: 0;">
          <%= pluralize(@user.errors.count, "error") %> prohibited this profile from being saved:
        </h2>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div style="margin-bottom: 1.5rem;">
      <%= form.label :monthly_income, "Monthly Income ($)", style: "display: block; margin-bottom: 0.5rem; font-weight: bold;" %>
      <%= form.number_field :monthly_income, step: 0.01, min: 0, placeholder: "e.g., 5000.00", style: "width: 100%; padding: 0.75rem; border: 1px solid #ddd; border-radius: 4px; font-size: 1rem;" %>
      <small style="color: #666;">Your average monthly income (before taxes)</small>
    </div>

    <div style="margin-bottom: 1.5rem;">
      <%= form.label :savings_goal_amount, "Savings Goal Amount ($)", style: "display: block; margin-bottom: 0.5rem; font-weight: bold;" %>
      <%= form.number_field :savings_goal_amount, step: 0.01, min: 0, placeholder: "e.g., 10000.00", style: "width: 100%; padding: 0.75rem; border: 1px solid #ddd; border-radius: 4px; font-size: 1rem;" %>
      <small style="color: #666;">How much do you want to save? (Optional)</small>
    </div>

    <div style="margin-bottom: 1.5rem;">
      <%= form.label :savings_goal_months, "Savings Goal Timeframe (Months)", style: "display: block; margin-bottom: 0.5rem; font-weight: bold;" %>
      <%= form.number_field :savings_goal_months, min: 1, max: 120, placeholder: "e.g., 12", style: "width: 100%; padding: 0.75rem; border: 1px solid #ddd; border-radius: 4px; font-size: 1rem;" %>
      <small style="color: #666;">Over how many months? (e.g., 6, 12, 24)</small>
    </div>

    <div style="margin-top: 2rem;">
      <%= form.submit "Save Profile", style: "background: #27ae60; color: white; padding: 1rem 2rem; border: none; border-radius: 4px; font-size: 1rem; cursor: pointer;" %>
      <%= link_to "Cancel", root_path, style: "margin-left: 1rem; color: #666; text-decoration: none;" %>
    </div>
  <% end %>
</div>
